<!-- header.ejs --->
<%- include('partials/header.ejs') %>
        <div class="bg-image">
            <form class="register" action="/register" method="POST">
                <div class="formContainer">
                    <h1>Register</h1>
                    <p>Please fill in this form to create an account.</p>
                    <hr>
                    
                    <label for="fname"><b>First Name</b></label>
                    <input type="text" placeholder="First Name" name="fname" id="fname" required>
                    
                    <label for="lname"><b>Last Name</b></label>
                    <input type="text" placeholder="Last Name" name="lname" id="lname" required>
                    
                    <label for="gender"><b>Gender: </b></label>
                    <input type="radio" name="gender" id="gender" required value="m">Male<input type="radio" name="gender" value="f"> Female<input type="radio" name="gender" value="n"> Non-gender<br>
                    
                    <div style="text-align:center">
                        State:
                        <select id="state" name="state" style="background-color:rgba(0,0,0,0.4)">
                            <option> Select One </option>
                        </select><br>
                        Select a County:  <select id="county" style="background-color:rgba(0,0,0,0.4)"></select><br><br />
                    </div>
                    
                    
                    <label for="username"><b>Username</b></label>
                    <input type="text" placeholder="Username" name="username" id="username" required>
                    <span id="usernameError"></span>

                    <label for="email"><b>Email</b></label>
                    <input type="text" placeholder="Enter Email" name="email" id="email" required>

                    <label for="password"><b>Password</b></label>
                    <input type="text" placeholder="Password" name="password" id="password" required>

                    <label for="cPassword"><b>Confirm Password</b></label>
                    <input type="text" placeholder="Confirm Password" name="cPassword" id="cPassword" required>
                    
                    
                    
                    <hr>

                    <p style="text-align:center;color:white">By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
                    <button type="submit" class="registerbtn">Register</button>
                </div>

                <div class="containerSignin">
                    <p style="color:white">Already have an account? <a href="/">Sign in</a>.</p>
                </div>
            </form>
        </div>
